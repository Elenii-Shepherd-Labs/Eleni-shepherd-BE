# Example environment variables for the vision microservice
# Copy this file to `.env` and set production values. Do NOT commit secrets in public repos.

FLASK_ENV=production
HOST=0.0.0.0
PORT=5000
DEBUG=false
LOG_LEVEL=info

# OCR configuration
USE_PYTESSERACT=true
TESSERACT_CMD=tesseract
USE_EASYOCR=false

# YOLO / object detection
ENABLE_YOLO=false
YOLO_MODEL_PATH=models/yolov8n.pt
YOLO_CONFIDENCE_THRESHOLD=0.25
YOLO_IOU_THRESHOLD=0.45

# Limits and behavior
MAX_IMAGE_SIZE_MB=20
MODEL_LOAD_TIMEOUT_MS=600000
ALLOW_MOCK=true

# Optional: caching / download directories
EASYOCR_CACHE_DIR=/tmp/easyocr_cache
