# Eleni Shepherd - Environment Variables
# Copy to .env and fill in values

# App
PORT=3000
NODE_ENV=development

# Database (MongoDB)
DATABASE_URL=mongodb://localhost:27017/eleni-shepherd

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Session
SESSION_SECRET=your-session-secret

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# OpenAI (Speech-to-Text, Text-to-Speech, LLM)
OPENAI_API_KEY=

# Anthropic (LLM alternative)
ANTHROPIC_API_KEY=

# Vision Service (Python YOLO microservice)
VISION_SERVICE_URL=http://localhost:5000

# Radio Browser (optional override)
RADIO_BROWSER_BASE_URL=https://de1.api.radio-browser.info

# GNews API (optional - for blog/news; without key uses Hacker News)
GNEWS_API_KEY=
